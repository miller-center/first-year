// Header (Topbar): Navigation Menu, Logo and Sharing Options
- var logo = "fy2017_logo.png"
.fixed#navigation-container
  nav.top-bar(data-topbar,role="navigation",data-options="sticky_on: large")
    section.logo-section.show-for-medium-up
      a(href="#") 
        img(src="../images/logos/#{logo}",data-interchange="[../images/logos/sm/#{logo}, (default)], [../images/logos/md/#{logo}, (medium)], [../images/logos/lg/#{logo}, (large)]")

    ul.title-area.hide-for-print
      li.name
        h1
          a.logo.show-for-small-only(href="#")
            img(src="../images/logos/sm/#{logo}")
      li.hide-for-print.toggle-topbar.menu-icon#mobile-menu
        a(href="#")
          span Menu 


    section.top-bar-section.main-menu-section#navigation-section
      //  Right Nav Section 
      ul.right
        li.hide-for-medium-up.hide-for-print
          a(href="/expressionengine.php/potus/about") About the Project
        li.hide-for-medium-up.hide-for-print
          a(href="/expressionengine.php/potus/issue/why-the-first-year") Issue 1: The First Year
        li.hide-for-medium-up.hide-for-print <!--.active class was applied here--I like it but want to apply globally. UntilI figure that out, commenting it out. -->
          a(href="/expressionengine.php/potus/about#getinvolved") Get Involved
        li.menu-option.hide-for-small-only.hide-for-print.has-dropdown#header-menu-icon
          a(href="#")
            span.label Menu
              span
          ul.dropdown
            li
              li
                  a(href="/expressionengine.php/potus/issue/why-the-first-year") Issue 1: The First Year
              li
                  span Issue 2: Coming Jan '16
            li
              a(href="/expressionengine.php/potus/about") About the Project
              ul 
                li 
                  a(href="/expressionengine.php/potus/about#contact") Contact Us
                li 
                  a(href="/expressionengine.php/potus/about#advisory") Advisory Council
                li 
                  a(href="/expressionengine.php/potus/about#scholars") Scholars
            li <!--active class was applied here--I like it but want to apply globally. UntilI figure that out, commenting it out. -->
              a(href="/expressionengine.php/potus/about#getinvolved") Get Involved


    section.social-section.show-for-medium-up.hide-for-print
      ul.right
        li.label Follow
        li.social-icon#header-fb-icon: a(href="#",title="Visit #{title} on Facebook")
          | &nbsp;
          //- img(src="images/icons/lg/facebook-wht.png")
        li.social-icon#header-tw-icon: a(href="#",title="Follow #{title} on Twitter") 
          | &nbsp;
 